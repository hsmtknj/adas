{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "g++",
            "type": "shell",
            "command": "g++",
            "args": [
                "sample.cpp",   // source file which is subject to be compiled
                "-g",           // for debug
                "-O0",          // not optimization for debug
                "-o",           // design execution filename 
                "sample.out",   // execution filename
                "`pkg-config --cflags opencv`",
                "`pkg-config --libs opencv`"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}